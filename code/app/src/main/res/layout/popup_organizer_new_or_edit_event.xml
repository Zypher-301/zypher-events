<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/label1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            android:text="Create Event"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Event Name"
            android:textSize="16sp"
            android:inputType="textCapWords" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Event Start Date"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary" />

        <Button
            android:id="@+id/btn_event_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Select date"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:gravity="start|center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:minHeight="48dp"
            android:background="?android:attr/editTextBackground"
            android:textColor="?android:attr/textColorHint" />

        <EditText
            android:id="@+id/edit_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Location"
            android:textSize="16sp"
            android:inputType="textCapWords" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Registration Start Date"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary" />

        <Button
            android:id="@+id/btn_reg_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Select date"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:gravity="start|center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:minHeight="48dp"
            android:background="?android:attr/editTextBackground"
            android:textColor="?android:attr/textColorHint" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Registration End Date"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary" />

        <Button
            android:id="@+id/btn_reg_end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Select date"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:gravity="start|center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:minHeight="48dp"
            android:background="?android:attr/editTextBackground"
            android:textColor="?android:attr/textColorHint" />

        <EditText
            android:id="@+id/edit_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:gravity="top"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />


        <EditText
            android:id="@+id/edit_lottery_criteria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Lottery Criteria/Guidelines (e.g. ages 8-12 can swim 25m)"
            android:textSize="16sp"
            android:inputType="textMultiLine"
            android:minLines="2" />

        <Switch
            android:id="@+id/switchLimit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Limit Waitlist"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/limit_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Waitlist Size"
            android:textSize="16sp"
            android:inputType="number" />

        <Switch
            android:id="@+id/require_geolocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Require Geolocation for Entry"
            android:textSize="16sp" />

        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:text="Save"
            android:textSize="16sp"
            android:paddingStart="32dp"
            android:paddingEnd="32dp" />

    </LinearLayout>
</ScrollView>
