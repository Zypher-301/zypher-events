<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/label1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:text="Create Event"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Event Name"
            android:inputType="textCapWords" />

        <EditText
            android:id="@+id/edit_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Event Start (yyyy-MM-dd)"
            android:inputType="text" />

        <EditText
            android:id="@+id/edit_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Location"
            android:inputType="textCapWords" />

        <EditText
            android:id="@+id/edit_reg_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Registration Start (yyyy-MM-dd)"
            android:inputType="text" />

        <EditText
            android:id="@+id/edit_reg_end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Registration End (yyyy-MM-dd)"
            android:inputType="text" />

        <EditText
            android:id="@+id/edit_poster_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Poster image URL (optional)"
            android:inputType="textUri" />

        <EditText
            android:id="@+id/edit_lottery_criteria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Lottery Criteria/Guidelines (e.g. ages 8-12 can swim 25m"
            android:inputType="textMultiLine"
            android:minLines="2"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

        <Switch
            android:id="@+id/switchLimit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Limit Waitlist"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/limit_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Waitlist Size"
            android:inputType="number" />

        <Switch
            android:id="@+id/require_geolocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Require Geolocation for Entry"
            android:textSize="16sp" />

        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="Save" />

    </LinearLayout>
</ScrollView>
