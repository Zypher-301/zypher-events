<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/entrant_navigation"
    app:startDestination="@+id/nav_all_events">

    <!-- All Events -->
    <fragment
        android:id="@+id/nav_all_events"
        android:name="com.example.zypherevent.ui.entrant.events.EntrantAllEventsFragment"
        android:label="All Events"
        tools:layout="@layout/fragment_entrant_all_events">

        <!-- Action to go to details -->
        <action
            android:id="@+id/action_nav_all_events_to_nav_entrant_event_details"
            app:destination="@id/nav_entrant_event_details" />
    </fragment>

    <!-- Joined Events -->
    <fragment
        android:id="@+id/nav_joined_events"
        android:name="com.example.zypherevent.ui.entrant.events.EntrantJoinedEventsFragment"
        android:label="Joined Events"
        tools:layout="@layout/fragment_entrant_joined_events" />

    <!-- QR Scanner -->
    <fragment
        android:id="@+id/nav_qr_scanner"
        android:name="com.example.zypherevent.ui.entrant.events.EntrantQRScannerFragment"
        android:label="QR Scanner"
        tools:layout="@layout/fragment_entrant_qr_scanner" />

    <!-- Notifications -->
    <fragment
        android:id="@+id/nav_notifications"
        android:name="com.example.zypherevent.ui.entrant.events.EntrantNotificationsFragment"
        android:label="Notifications"
        tools:layout="@layout/fragment_entrant_notifications" />

    <!-- Settings -->
    <fragment
        android:id="@+id/nav_settings"
        android:name="com.example.zypherevent.ui.entrant.events.EntrantSettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_entrant_settings" />

    <!-- Event Details destination -->
    <fragment
        android:id="@+id/nav_entrant_event_details"
        android:name="com.example.zypherevent.ui.entrant.events.EntrantEventDetailsFragment"
        android:label="Event Details"
        tools:layout="@layout/fragment_event_details" />

</navigation>